{
  "name": "tressi",
  "version": "0.0.4",
  "description": "",
  "license": "MIT",
  "author": "kevinchatham",
  "type": "commonjs",
  "main": "dist/index.js",
  "bin": {
    "tressi": "dist/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx src/cli.ts --config tressi.config.ts --concurrency 2 --duration 5",
    "format": "prettier --write . --config .prettierrc --ignore-path .prettierignore",
    "lint:inspect": "eslint --inspect-config",
    "lint:watch": "chokidar \"**/*.ts\" -c \"npm run lint\"",
    "lint": "eslint --fix --format unix --config ./eslint.config.mjs .",
    "start": "npm run build && node dist/cli.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0",
    "chalk": "^5.4.1",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.0",
    "inquirer": "^12.7.0",
    "jiti": "^2.4.2",
    "ora": "^8.2.0",
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@types/blessed": "^0.1.25",
    "@types/inquirer": "^9.0.8",
    "@types/node": "^24.0.10",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "chokidar-cli": "^3.0.0",
    "eslint-formatter-unix": "^8.40.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "prettier": "^3.5.3",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.1.0"
  }
}
